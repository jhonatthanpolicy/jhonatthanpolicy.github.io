{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Births per year (World)",
  "data": {
    "url": "https://ourworldindata.org/grapher/number-of-births-per-year.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "filter": "datum.Entity == 'World' && datum.Year >= 1970 && datum.Year <= 2023"
    },
    {
      "calculate": "datum['Births - Sex: all - Age: all - Variant: estimates'] / 1000000",
      "as": "Births_millions"
    }
  ],
  "mark": {"type": "line"},
  "encoding": {
    "x": {"field": "Year", "type": "ordinal", "title": "Year"},
    "y": {
      "field": "Births_millions",
      "type": "quantitative",
      "title": "Births (millions)",
      "axis": {"format": ".0f"}
    },
    "tooltip": [
      {"field": "Year", "type": "quantitative", "title": "Year"},
      {
        "field": "Births_millions",
        "type": "quantitative",
        "format": ",.1f",
        "title": "Births (millions)"
      }
    ]
  }
}
