{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Scotland â€” Alcohol Prohibition Areas by Local Authority",
    "subtitle": ["Red = byelaw text present in dataset", "Grey = no matching record"],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "middle",
    "color": "black"
  },
  "width": 420,
  "height": 520,
  "projection": { "type": "mercator" },

  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/main/MappingWorkshop/geo_data/LAD_SCT_2025_05.topojson",
    "format": { "type": "topojson", "feature": "object_name" }
  },

  "transform": [
    {
      "lookup": "properties.LAD25CD",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/jhonatthanpolicy/jhonatthanpolicy.github.io/main/Alcohol_Prohibition_Areas_-_Scotland.csv",
          "format": { "type": "csv" }
        },
        "key": "la_s_code",
        "fields": ["byelaw", "local_authority"]
      }
    },
    {
      "calculate": "isValid(datum.byelaw) && datum.byelaw != '' ? 'Prohibition area' : 'No prohibition (or no byelaw text)'",
      "as": "status"
    },
    {
      "calculate": "isValid(datum.local_authority) ? datum.status : 'No data'",
      "as": "status_final"
    }
  ],

  "mark": { "type": "geoshape", "stroke": "white", "strokeWidth": 0.6 },

  "encoding": {
    "color": {
      "field": "status_final",
      "type": "nominal",
      "scale": {
        "domain": ["Prohibition area", "No prohibition (or no byelaw text)", "No data"],
        "range": ["#d73027", "#c7e9c0", "#dddddd"]
      },
      "legend": { "title": "Alcohol controls" }
    },
    "tooltip": [
      { "field": "properties.LAD25NM", "type": "nominal", "title": "Local Authority" },
      { "field": "status_final", "type": "nominal", "title": "Status" }
    ]
  },

  "config": { "background": "white", "view": { "stroke": "transparent" } }
}
